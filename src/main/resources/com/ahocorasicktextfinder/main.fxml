<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ahocorasicktextfinder.Controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Enter your text" />
   <TextField fx:id="textField" prefHeight="26.0" prefWidth="374.0" />
   <Label text="and your patterns (separate with comma)" />
   <TextField fx:id="patternField" prefHeight="26.0" prefWidth="374.0" />
    <Button onAction="#onSearchButtonClick" text="Search" />
   <Label text="or load a JSON file" />
    <Button onAction="#onLoadButtonClick" text="Load" />
   <Label fx:id="resultLabel" prefHeight="200.0" />
</VBox>
